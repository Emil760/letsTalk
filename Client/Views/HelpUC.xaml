<UserControl x:Class="Client.Views.HelpUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="/WindowResources/ThemeDictionary.xaml"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock TextWrapping="WrapWithOverflow" Text="Hello dear user, welcome to the LetsTalk chat app!"  FontSize="30" Foreground="{StaticResource ButtonBackground}" Margin="50, 15"/>
            <TextBlock TextWrapping="WrapWithOverflow" Text="Select the chat you need from the menu list in order to start chatting or create a new one" FontSize="30"  Margin="50, 5" Foreground="{StaticResource ButtonBackground}"></TextBlock>
        </StackPanel>
        <Image Grid.Row="1" Source="/Resources/logo.png" Margin="0, 40" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
